{
  "name": "raven-lang",
  "displayName": "The Raven Language",
  "version": "0.0.4",
  "description": "Editor support for the Raven language",
  "publisher": "unkindnesses",
  "repository": "https://github.com/Unkindnesses/vscode-raven",
  "sponsor": {
    "url": "https://github.com/sponsors/MikeInnes"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/src/extension.js",
  "enabledApiProposals": [
    "terminalDataWriteEvent"
  ],
  "contributes": {
    "languages": [
      {
        "id": "raven",
        "aliases": [
          "Raven",
          "raven"
        ],
        "extensions": [
          ".rv"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "raven",
        "scopeName": "source.raven",
        "path": "./syntaxes/raven.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[raven]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
      }
    },
    "commands": [
      {
        "command": "raven-lang.installCLI",
        "title": "Raven: Add Terminal Command"
      },
      {
        "command": "raven-lang.removeCLI",
        "title": "Raven: Remove Terminal Command"
      }
    ]
  },
  "scripts": {
    "build:syntax": "js-yaml syntaxes/raven.tmLanguage.yaml > syntaxes/raven.tmLanguage.json",
    "build": "npm run build:syntax && tsc -p ./",
    "vscode:prepublish": "npm run build",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run build",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "js-yaml": "^4.1.1",
    "typescript": "^5.9.3",
    "vscode-oniguruma": "^2.0.1",
    "vscode-textmate": "^9.2.1"
  },
  "dependencies": {
    "@unkindnesses/raven": "^0.3.0"
  }
}
