{
  "name": "raven-language",
  "displayName": "Raven",
  "description": "Editor support for the Raven language",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "raven",
        "aliases": [
          "Raven",
          "raven"
        ],
        "extensions": [
          ".rv"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "raven",
        "scopeName": "source.raven",
        "path": "./syntaxes/raven.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
        "[raven]": {
            "editor.tabSize": 2,
            "editor.insertSpaces": true
        }
    }
  },
  "scripts": {
    "build": "js-yaml syntaxes/raven.tmLanguage.yaml > syntaxes/raven.tmLanguage.json"
  },
  "devDependencies": {
    "js-yaml": "^4.1.1"
  }
}
