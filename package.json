{
  "name": "raven-lang",
  "displayName": "The Raven Language",
  "version": "0.0.1",
  "description": "Editor support for the Raven language",
  "publisher": "unkindnesses",
  "repository": "https://github.com/Unkindnesses/vscode-raven",
  "sponsor": {
    "url": "https://github.com/sponsors/MikeInnes"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "raven",
        "aliases": [
          "Raven",
          "raven"
        ],
        "extensions": [
          ".rv"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "raven",
        "scopeName": "source.raven",
        "path": "./syntaxes/raven.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[raven]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
      }
    }
  },
  "scripts": {
    "build": "js-yaml syntaxes/raven.tmLanguage.yaml > syntaxes/raven.tmLanguage.json",
    "test": "npm run build && mocha \"test/**/*.test.js\""
  },
  "devDependencies": {
    "js-yaml": "^4.1.1",
    "mocha": "^10.8.2"
  },
  "dependencies": {
    "vscode-oniguruma": "^2.0.1",
    "vscode-textmate": "^9.2.1"
  }
}
